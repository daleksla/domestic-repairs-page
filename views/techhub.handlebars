
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Technician Hub</title>
		<meta name="description" content="Displays unassigned jobs">
		<meta name="author" content="Salih Ahmed">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<link href="{{host}}/darkstyle.css" type="text/css" rel="stylesheet" />
		<link rel="icon" href="{{host}}/3014275.svg">
		<script type="module" src="{{host}}/main.js"></script>
	</head>
	<body>
		<header id="header">
			<img src="{{host}}/3014274.svg" alt="Logo" />
		<h1>Hub</h1>
				<button id="mode">Toggle dark mode</button>
			<a href="/logout">Log out</a>
		</header>
	<nav>
  <h2>Content</h2>
  <ol>
    <li><a href="/">Home</a></li>
		{{#if authorised}}
			{{#if isCustomer}}
				<li><a href="/custhub">Hub</a></li>
			{{else}}
				<li><a href="/techhub">Hub</a></li>
			{{/if}}
		{{else}}
			<li><a href="/login">Hub</a></li>
		{{/if}}
		</ol>
		</nav>
		{{#if msg}}
 			<aside>
				<p id="notification" class="msg">{{msg}}</p>
			</aside>
		{{/if}}
		<main>
			{{#if record.status}}
				<table>
					<tr><th>Job</th><th>Customer</th></tr>
					{{#each record}}
<!-- 							<form action="/custhub" enctype="multipart/form-data" method="post"> -->
					<tr>
						<td><h2>{{this.job}}</h2></td>
<!-- 						<input type="hidden" name="job" value="{{this.job}}"><br/> <!-- hidden field to store our values-->
						<td>
								<p>{{this.user}}</p>	
						</td>
<!-- 							<td><p><input type="submit" value="Submit changes"></p></td> -->
						</tr>
<!-- 					</form> -->
					{{/each}}
				</table>
			{{else}}
				<p>No jobs are currently unassigned</p>
			{{/if}}
			<p><a href="/techhub/profile">Edit specialities</a></p>
		</main>
					<footer>
				<p>&copy; Domestic Repairs Ltd.</p>
			</footer>
	</body>
</html>
