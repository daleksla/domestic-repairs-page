
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Home Page</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="../public/main.js"></script>
	</head>
	<body>
		<header>
		<h1>Secure Page</h1>
		<a href="/logout">Log out</a>
		</header>
		{{#if msg}}
 			<aside>
				<p class="msg">{{msg}}</p>
			</aside>
		{{/if}}
		<main>
			<table>
				<tr><th>Job</th><th>Status</th></tr>
				{{#each record}}
					<tr>
						<td>{{this.job}}</td>
						<td>{{this.status}}</td>
					</tr>
				{{/each}}
			</table>
<!-- 		<p>This is a secure page. Users need to have a valid account and be logged in to see it.</p> -->
		<p><a href="/">Home page</a></p>
		</main>
	</body>
</html>
