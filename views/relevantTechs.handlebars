
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Relevant Technicians</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="{{host}}/main.js"></script>
	</head>
	<body>
		<header>
		<h1>Relevant Technicians</h1>
			<a href="/logout">Log out</a>
		</header>
	<nav>
  <h2>Content</h2>
  <ol>
    <li><a href="/">Home</a></li>
		{{#if authorised}}
			{{#if isCustomer}}
				<li><a href="/techhub">Hub</a></li>
			{{else}}
				<li><a href="/custhub">Hub</a></li>
		{{/if}}
		{{else}}
			<li><a href="/login">Hub</a></li>
		{{/if}}
		</ol>
		</nav>
<!-- 		{{#if msg}}
<aside>
				<p id="notification" class="msg">{{msg}}</p>
			</aside>
		{{/if}} -->
		<main>
			{{#if status}}
				<table>
					<tr><th>Technician username</th><th>Address</th><th>Phone number</th></tr>
					{{#each record}}
					<tr>
						<td><h2>{{this.id}}</h2></td>
						<td>{{this.address}}</td>
						<td>{{this.phoneNumber}}</td>
						</tr>
					{{/each}}
				</table>
			{{else}}
				<p>Sorry, we have no relevant technicians able to assist you</p>
			{{/if}}
		</main>
	</body>
</html>
